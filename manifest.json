{
  "manifest_version": 3,
  "name": "Healthy Break Reminder",
  "description": "Get smart reminders to drink water, walk, move, and rest your eyes!",
  "version": "1.0",
  "permissions": ["notifications", "storage", "alarms"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
